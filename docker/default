server {
	server_name _;
	proxy_read_timeout 300;
	proxy_connect_timeout 300;
	proxy_send_timeout 300;

	location / {
		root /var/www/html;
		try_files $uri /index.html;
	}

	location /product_img/ {
		proxy_pass http://0.0.0.0:8000/products/;

	}

	location /api/ {
		proxy_pass http://0.0.0.0:8000/api/;
	}

